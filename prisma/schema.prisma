datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @id
  username String     @unique
  avatar   String
  email    String     @unique
  sessions Session[]
  accounts Account[]
  feed     FeedItem[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Account {
  id           String  @id
  userId       String
  provider     String
  accessToken  String?
  refreshToken String?
  user         User    @relation(references: [id], fields: [userId], onDelete: Cascade)
}

enum FeedItemType {
  SNEAKYCROW_BLOG_POST
}

model FeedItem {
  id     String       @id
  type   FeedItemType
  userId String
  data   Json

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
